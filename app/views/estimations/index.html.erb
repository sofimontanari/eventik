<div class="container">
<h6>Tus Cotizaciones: </h6>

  <% @estimations.each do |estimation| %>
    <div class="border">
      <p>Evento a cotizar: <%= Event.find(estimation.event_id).name  %></p>
      <p>nombre del cliente: <%= User.find(Event.find(estimation.event_id).user_id).name %> </p>
      <p>Consulta del cliente: <%= estimation.comments  %></p>
      <p>Estado de la cotización: <%= estimation.status %></p>
      <p>Precio cotizado: <%= estimation.price %></p>
      <p>Tu respuesta: <%= estimation.feedback %></p>
      <p>Fecha de entrega solicitada: <%= estimation.delivery_date %></p>
      <p>Estado del servicio:
        <% if estimation.delivery_date <= Date.today %>
          <%= "Entregado" %>
        <% else %>
          <%= "En proceso de entrega" %>
        <% end %>
      </p>
      <% if estimation.status != 'Aceptada' && estimation.status != 'Suspendida' && estimation.status != 'Cotizada por Proveedor' %>
        <%= link_to "Responder", edit_estimation_path(estimation) %>
      <% end %>
    </div>
  <% end %>

</div>

<%# <%= link_to "Volver", events_path %>
<%= link_to "Volver", root_path, class:"btn btn-success" %>


  <div class="container pb-4">
    <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><%= link_to "Home", root_path, class: "text-decoration-none text-success" %></li>
        <li class="breadcrumb-item active" aria-current="page">Mis Cotizaciones</li>
      </ol>
    </nav>
  </div>

  <div class="d-flex justify-content-between container">
    <h4 class="flex-grow-1"><%= current_user.business_name %>, estos son los eventos que te solicitaron cotización:</h4>
  </div>

<div class="container mt-5">
  <table class="table table-hover">
    <thead class="table-light">
      <tr>
        <th scope="col" class="ps-3">Nº</th>
        <th scope="col">Evento</th>
        <th scope="col">Nombre del usuario</th>
        <th scope="col">Estado de la cotizacion</th>
        <th scope="col">Estado del servicio</th>
      </tr>
    </thead>
    <tbody class="table-light">
      <% current_user.events.order(date: :asc).each_with_index do |event, index| %>
        <tr class="text-start ms-1">
          <th scope="row", class="ps-3"><%= index + 1 %></th>
            <td> <%= event.name %></td>
            <td><%= EventType.find(event.event_type_id).name %></td>
            <td><%= "#{event.date.day}/#{event.date.month}/#{event.date.year}" %></td>
            <td><%= event.estimations.count%>
            <%= link_to "", event_path(event), class:"fa-regular fa-eye text-decoration-none text-muted ms-1", data: {toggle:'tooltip' }, title:"Ver Cotizaciones" %> </td>
            <td> <% if event.status == 'En proceso'%>
              <span><%= event.status%><i class="fa-solid fa-circle ms-3 border border-dark-subtle rounded-circle border border-2" style="color: #F2FF4B"></i><span>
            <% else %>
              <span><%= event.status%><i class="fa-solid fa-circle ms-3 border border-dark-subtle rounded-circle border border-2" style="color: #2EFF94"></i><span>
            <% end %>
            </td>
            <td>
              <%= link_to "", edit_event_path(event), class:"fa-regular fa-pen-to-square mx-2 text-decoration-none text-muted", data: {toggle:'tooltip' }, title:"Editar Evento"%>
              <%= link_to "", event_path(event), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class:"fa-regular fa-trash-can mx-2 text-decoration-none text-muted", data: {toggle:'tooltip' }, title:"Eliminar Evento" %>
              <% if event.date > Date.today %>
              <%= link_to "", users_path(event: event), class:"fa-regular fa-square-plus text-decoration-none mx-2 text-muted", data: {toggle:'tooltip' }, title:"Agregar servicios" %>
              <% end %>
            </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to "Volver", root_path, class: "btn btn-primary text-light" %>
</div>
