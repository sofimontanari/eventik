<div class="container shadow mt-3 p-3 w-50">
    <h5 class="text-center">Cotización</h5>

  <% if current_user.supplier %>
        <%= simple_form_for @estimation do |f| %>
        <%= f.label :delivery_date, label: "Fecha de Entrega: #{@estimation.delivery_date}" %>
        <%= f.label :comments, label: "Comentarios del Cliente: #{@estimation.comments}"  %>
        <%= f.input :feedback, label: "Dale tu respuesta al cliente" %>
        <%= f.input :price, label: "Precio cotizado:" %>
        <div class="row d-flex justify-content-center">
          <div class="col-2">
            <%= f.submit "Responder", class:"btn btn-success"%>
          </div>
          <div class="col-2">
              <%= link_to "Volver", estimations_path, class:"btn btn-primary" %>
          </div>
        </div>
      <% end %>

  <% else %>
        <%= simple_form_for @estimation do |f| %>
        <%= f.label :delivery_date, label: "Fecha de Entrega: #{@estimation.delivery_date}" %>
        <%= f.label :feedback, label: "Comentario del proveedor #{@estimation.feedback}" %>
        <%= f.label :price, label: "Precio cotizado: #{@estimation.price}" %>
         <%= f.label :feedback, label: "Tu consulta inicial #{@estimation.comments}" %>
        <%= f.input :comments, label: "Tu nueva consulta al proveedor", placeholder: "Cuál es tu consulta?" %>
        <div class="row d-flex justify-content-center">
          <div class="col-2">
            <%= f.submit "Negociar", class:"btn btn-success"%>
          </div>
          <div class="col-2">
              <%= link_to "Volver", events_path, class:"btn btn-primary" %>
          </div>
        </div>
        <% end %>

  <% end%>


</div>
