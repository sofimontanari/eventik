<div class="container shadow mt-3 p-3 w-50">
    <h5 class="text-center">Dejá tu Review para el proveedor</h5>
  <%= simple_form_for [@estimation, @review] do |f| %>
    <%= f.input :comment, label: "¿Cómo fue tu experiencia con este Proveedor?"%>
    <%= f.input :rating, label: "Dejá tu puntaje:"  %>
   <div class="row d-flex justify-content-center">
      <div class="col-2">
        <%= f.submit "Confirmar", class:"btn btn-success"%>
      </div>
      <div class="col-2">
          <%= link_to "Volver", event_path(@estimation.event_id), class:"btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>
