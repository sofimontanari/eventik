
<h1>Edita tu evento acá </h1>

   <%= simple_form_for @event do |f| %>
    <%= f.input :name, label: "¿Cómo lo vas a llamar?"  %>
    <%= f.label :date, label: "¿Cuándo lo vas a hacer? #{@event.date}"%>
    <%= f.label :address, label: "¿Dónde? #{@event.address}" %>
         <div class="row d-flex justify-content-center">
      <div class="col-2">
        <%= f.submit "Confirmar", class:"btn btn-success"%>
      </div>
      <div class="col-2">
          <%= link_to "Volver", events_path, class:"btn btn-primary" %>
      </div>
     
    </div>
  <% end %>
