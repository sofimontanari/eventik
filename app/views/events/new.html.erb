<div class="container pb-1 mt-3">
    <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><%= link_to "Home", root_path, class: "text-decoration-none text-success" %></li>
        <li class="breadcrumb-item active" aria-current="page">Creá tu Evento </li>
      </ol>
    </nav>
</div>

<div class="container shadow mt-1  mb-5 pb-2 p-3 w-50">
    <h5 class="text-center pt-2 fw-bold">Creá tu Evento</h5>
    <p class="pt-3 text-center"><strong>Tipo de Evento: </strong> <%= params[:event_type] %></p>
    <hr>
    <div class="lh-lg ps-2 pe-2 pt-2">
      <%= simple_form_for @event do |f| %>
        <%= f.input :name, label: "¿Cómo lo vas a llamar?"  %>
        <%= f.input :date, html5:true, label: "¿Cuándo lo vas a hacer?"%>
        <%= f.input :address, label: "¿Dónde?", placeholder: "Av.Libertador 1000, Buenos Aires"  %>
        <%= f.hidden_field :event_type_id, value: @event_type_id %>
          <div class="d-flex justify-content-evenly mb-2 pe-5 ps-5 pt-3 pb-3">
            <%= f.submit "Confirmar", class:"btn btn-success text-light"%>
            <%= link_to "Volver", root_path, class:"btn btn-ghost" %>
          </div>
        </div>
      <% end %>
    </div>

</div>
