  <div class="container pb-4">
    <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><%= link_to "Home", root_path, class: "text-decoration-none text-success" %></li>
        <li class="breadcrumb-item active" aria-current="page">Mis Eventos</li>
      </ol>
  </nav>
  </div>

  <div class="d-flex justify-content-between container">
    <h4 class="flex-grow-1"><%= current_user.name %>, estos son tus Eventos:</h4>
    <%= link_to "Nuevo Evento", pages_events_path, class: "btn btn-success text-light" %>
  </div>

<div class="container mt-5">


  <table class="table">

    <thead>

      <tr>
        <th scope="col" class="ps-3">NÂº Evento</th>
        <th scope="col">Tipo de Evento</th>
        <th scope="col">Nombre</th>
        <th scope="col">Fecha del Evento</th>
        <th scope="col">Estado</th>
      </tr>
    </thead>

    <tbody>
      <% current_user.events.order(date: :asc).each_with_index do |event, index| %>
        <tr class="text-start ms-1">
            <th scope="row", class="ps-3"><%= index + 1 %></th>
            <td><%= EventType.find(event.event_type_id).name %></td>
            <td>
              <%= event.name %>
              <%= link_to "", edit_event_path(event), class:"fa-solid fa-pencil text-decoration-none ms-2"%>
              <%= link_to "", event_path(event), class:"fa-solid fa-eye text-decoration-none" %>
              <%= link_to "", event_path(event), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class:"fa-solid fa-trash text-decoration-none" %>
              <% if event.date > Date.today %>
                <%= link_to "", users_path(event: event), class:"fa-solid fa-square-plus text-decoration-none" %>
              <% end %>
            </td>
            <td><%= "#{event.date.day}/#{event.date.month}/#{event.date.year}" %></td>
            <td>
            <% if event.status == 'En proceso'  %>
              <span><%= event.status%><i class="fa-solid fa-circle ms-3" style="color: #F2FF4B;"></i><span>
            <% else %>
              <span><%= event.status%><i class="fa-solid fa-circle ms-3" style="color: #2EFF94;"></i><span>
            <% end %>
            </td>

        </tr>
      <% end %>
    </tbody>

  </table>

<%= link_to "Volver", root_path, class: "btn btn-info text-light" %>
</div>
